# exa aliasing
alias ls="exa -F"
alias l="exa -aF"
alias ll="exa -lghF"
alias la="exa -laghF"
alias lt="exa -TF"
alias lg="exa -laghF --git"
alias cat="bat"
alias cp="rsync -av --progress"
alias clipboard="xclip -sel clip"
alias grep="rg"
alias du="dust"
alias find="fd"
alias cd="z"
alias top="btm"
# alias sed="sd"

